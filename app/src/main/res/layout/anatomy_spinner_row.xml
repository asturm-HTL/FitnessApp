<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spinner_background"

    >


    <ImageView
        android:id="@+id/muscleImageView"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/hamstringsanatomy"
        android:background="@android:color/black"
    />

    <TextView
        android:id="@+id/musclenames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamstrings"
        android:layout_alignBottom="@+id/muscleImageView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/muscleImageView"
        android:textSize="30sp"
        android:textColor="#fff"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />








</LinearLayout>