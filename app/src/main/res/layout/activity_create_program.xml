<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBeforeTimer"
    android:orientation="vertical"
    android:background="@drawable/exbackgound4"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/workoutexperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your workout-experience"
        android:textColor="#fff"
        android:fontFamily="@font/fredoka_one"
        android:textSize="23sp"
        />

    <Spinner
        android:id="@+id/workoutexperienceSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/workoutexperience"
        />

    <TextView
        android:id="@+id/workoutopportunities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your workout-opportunities:"
        android:textColor="#fff"
        android:fontFamily="@font/fredoka_one"
        android:textSize="23sp"
        />

    <Spinner
        android:id="@+id/workoutopportunitiesSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workoutopportunities"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/workoutcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How often do you want to work out?"
        android:textColor="#fff"
        android:fontFamily="@font/fredoka_one"
        android:textSize="23sp"
        />

    <Spinner
        android:id="@+id/workoutcountSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workoutcount"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/createProgramBtn"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Create Program"
        android:textSize="15sp"
        android:fontFamily="@font/fredoka_one"
        android:layout_below="@id/workoutcountSpinner"
        android:textColor="@android:color/black"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        />



</LinearLayout>