<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBeforeTimer"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:gravity=""
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textAlignment="center"
        android:fontFamily="@font/fredoka_one"
        android:text="TIMER"
        android:layout_gravity="center"
        android:textSize="110dp"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length of your work-time"
        android:textColor="#fff"
        android:fontFamily="@font/fredoka_one"
        android:textSize="40sp"
        android:layout_gravity="center"

        />

    <Spinner
        android:id="@+id/spinnerwork"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/work"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length of your pause-time"
        android:textColor="#fff"
        android:fontFamily="@font/fredoka_one"
        android:textSize="40sp"
        android:layout_gravity="center"

        />

    <Spinner
        android:id="@+id/spinnerpause"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_below="@+id/pause"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of rounds"
        android:textColor="#fff"
        android:fontFamily="@font/fredoka_one"
        android:textSize="40sp"
        android:layout_gravity="center"

        />

    <Spinner
        android:id="@+id/spinnerrounds"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_below="@+id/rounds"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/admitBtn"
        android:layout_width="420dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:text="Admit"
        android:textSize="30sp"
        android:fontFamily="@font/fredoka_one"
        android:layout_below="@id/spinnerrounds"
        android:textColor="@android:color/black"
        android:layout_marginTop="14dp"
        android:background="@drawable/button"
        />



</LinearLayout>