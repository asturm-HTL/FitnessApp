<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:gravity="center_horizontal"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <TextView
        android:id="@+id/userIDTV"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
    />
            <TextView
                android:id="@+id/userIDTVFRA"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/fredoka_one"
                android:textSize="50dp"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                />

    <TextView
        android:id="@+id/userfirstnameTV"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
    />

            <TextView
                android:id="@+id/userfirstnameTVFRA"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/fredoka_one"
                android:textSize="50dp"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
            />

    <TextView
        android:id="@+id/userlastnameTV"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
    />

            <TextView
                android:id="@+id/userlastnameTVFRA"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/fredoka_one"
                android:textSize="50dp"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
            />

    <TextView
        android:id="@+id/userusernameTV"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"

        />

            <TextView
                android:id="@+id/userusernameTVFRA"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/fredoka_one"
                android:textSize="50dp"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
            />

    <TextView
        android:id="@+id/userpasswordTV"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        />

            <TextView
                android:id="@+id/userpasswordTVFRA"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/fredoka_one"
                android:textSize="50dp"
                android:padding="20dp"
                android:textAlignment="center"
            />
    </LinearLayout>

</ScrollView>